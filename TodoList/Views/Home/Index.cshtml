@{
    ViewBag.Title = "Stuff To Do Home";
}

@model IEnumerable<TodoList.Models.Todo>

<div class="jumbotron">
    <h1>Stuff To Do</h1>
</div>

<div class="row">

    <h2>My Todo List</h2>
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Due Date</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var todo in Model)
                {
                    <tr>
                        <td>@todo.Title</td>
                        <td>@todo.Description</td>
                        <td>@todo.DueDate.ToString("MM/dd/yyyy")</td>
                        <td>@Html.ActionLink("Edit", "Edit", new { id = @todo.Id })</td>
                        <td>@Html.ActionLink("Delete", "Delete", new { id = @todo.Id })</td>
                    </tr>
                }
               
            </tbody>
        </table>
